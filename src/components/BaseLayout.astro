---
interface Props {
	title?: string;
	description?: string;
}

const { 
	title = "Adarsh Kumar Dalai", 
	description = "Software Developer Portfolio" 
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="description" content={description} />
		<meta name="generator" content={Astro.generator} />
		<!-- Google Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="" />
		<link href="https://fonts.googleapis.com/css2?family=BBH+Bartle&family=BBH+Bogle&display=swap" rel="stylesheet" />
		<title>{title}</title>
	</head>
	<body>
		<button class="theme-toggle" aria-label="Toggle dark mode" title="Toggle theme">
			<span class="toggle-track">
				<span class="toggle-thumb"></span>
			</span>
		</button>
		<div class="scroll-container">
			<slot />
		</div>
		<nav class="nav-dots" aria-label="Section navigation">
			<div class="dots-wrapper"></div>
		</nav>
	</body>
</html>

<style is:global>
	:root {
		--bg: #ffffff;
		--text: #111111;
		--text-muted: #666666;
		--text-subtle: #444444;
		--border: #111111;
		--card-bg: #f5f5f5;
		--dot-inactive: rgba(0, 0, 0, 0.2);
		--dot-hover: rgba(0, 0, 0, 0.5);
		--dot-active: #111111;
		--toggle-track: #e0e0e0;
		--toggle-thumb: #111111;
	}

	[data-theme="dark"] {
		--bg: #0a0a0a;
		--text: #f0f0f0;
		--text-muted: #999999;
		--text-subtle: #bbbbbb;
		--border: #f0f0f0;
		--card-bg: #1a1a1a;
		--dot-inactive: rgba(255, 255, 255, 0.2);
		--dot-hover: rgba(255, 255, 255, 0.5);
		--dot-active: #f0f0f0;
		--toggle-track: #333333;
		--toggle-thumb: #f0f0f0;
	}

	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	html {
		font-family: "BBH Bogle", -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
		background: var(--bg);
		color: var(--text);
		line-height: 1.6;
		transition: background 0.3s, color 0.3s;
	}

	body {
		height: 100vh;
		height: 100dvh;
		overflow: hidden;
	}

	.scroll-container {
		height: 100vh;
		height: 100dvh;
		overflow-y: auto;
		overflow-x: hidden;
		scroll-snap-type: y mandatory;
		scroll-behavior: smooth;
		-webkit-overflow-scrolling: touch;
	}

	.page-section {
		min-height: 100vh;
		min-height: 100dvh;
		scroll-snap-align: start;
		scroll-snap-stop: always;
		display: flex;
		align-items: center;
		justify-content: center;
		position: relative;
		padding: clamp(1.5rem, 5vw, 4rem);
	}

	.section-inner {
		width: 100%;
		max-width: clamp(320px, 85vw, 800px);
	}

	/* Headings use BBH Bartle */
	h1, h2, h3, h4, h5, h6 {
		font-family: "BBH Bartle", -apple-system, BlinkMacSystemFont, sans-serif;
		font-weight: 400;
	}

	a {
		color: inherit;
		text-decoration: none;
	}

	/* Theme toggle button */
	.theme-toggle {
		position: fixed;
		top: 1.5rem;
		right: 1.5rem;
		z-index: 200;
		background: none;
		border: none;
		cursor: pointer;
		padding: 0.5rem;
	}

	.toggle-track {
		display: block;
		width: 44px;
		height: 24px;
		background: var(--toggle-track);
		border-radius: 12px;
		position: relative;
		transition: background 0.3s;
	}

	.toggle-thumb {
		position: absolute;
		top: 2px;
		left: 2px;
		width: 20px;
		height: 20px;
		background: var(--toggle-thumb);
		border-radius: 50%;
		transition: transform 0.3s, background 0.3s;
	}

	[data-theme="dark"] .toggle-thumb {
		transform: translateX(20px);
	}

	/* Navigation dots - right side on desktop */
	.nav-dots {
		position: fixed;
		right: 2rem;
		top: 50%;
		transform: translateY(-50%);
		z-index: 100;
	}

	.dots-wrapper {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.nav-dot {
		width: 8px;
		height: 8px;
		border-radius: 50%;
		background: var(--dot-inactive);
		border: none;
		cursor: pointer;
		transition: all 0.3s ease;
		padding: 0;
	}

	.nav-dot:hover {
		background: var(--dot-hover);
		transform: scale(1.3);
	}

	.nav-dot.active {
		background: var(--dot-active);
		transform: scale(1.2);
	}

	/* Mobile - horizontal scroll */
	@media (max-width: 768px) {
		.scroll-container {
			display: flex;
			flex-direction: row;
			overflow-x: auto;
			overflow-y: hidden;
			scroll-snap-type: x mandatory;
		}

		.page-section {
			min-width: 100vw;
			min-height: 100vh;
			min-height: 100dvh;
			flex-shrink: 0;
		}

		.section-inner {
			max-height: 85vh;
			overflow-y: auto;
		}

		.nav-dots {
			right: auto;
			top: auto;
			bottom: 1.5rem;
			left: 50%;
			transform: translateX(-50%);
		}

		.dots-wrapper {
			flex-direction: row;
			gap: 0.75rem;
		}
	}
</style>

<script>
	// Theme toggle
	const initTheme = () => {
		const toggle = document.querySelector('.theme-toggle');
		const html = document.documentElement;
		
		// Check for saved preference or system preference
		const savedTheme = localStorage.getItem('theme');
		const systemDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
		
		if (savedTheme) {
			html.setAttribute('data-theme', savedTheme);
		} else if (systemDark) {
			html.setAttribute('data-theme', 'dark');
		}

		toggle?.addEventListener('click', () => {
			const current = html.getAttribute('data-theme');
			const next = current === 'dark' ? 'light' : 'dark';
			html.setAttribute('data-theme', next);
			localStorage.setItem('theme', next);
		});
	};

	// Navigation dots
	const initNavDots = () => {
		const container = document.querySelector('.scroll-container');
		const sections = document.querySelectorAll('.page-section');
		const dotsWrapper = document.querySelector('.dots-wrapper');
		
		if (!container || !sections.length || !dotsWrapper) return;

		// Create navigation dots
		sections.forEach((section, index) => {
			const dot = document.createElement('button');
			dot.className = 'nav-dot';
			dot.setAttribute('aria-label', `Section ${index + 1}`);
			dot.addEventListener('click', () => {
				section.scrollIntoView({ behavior: 'smooth' });
			});
			dotsWrapper.appendChild(dot);
		});

		const dots = document.querySelectorAll('.nav-dot');
		if (dots.length > 0) dots[0].classList.add('active');

		// Track active section
		const observerOptions = {
			root: container,
			threshold: 0.5
		};

		const observer = new IntersectionObserver((entries) => {
			entries.forEach(entry => {
				if (entry.isIntersecting) {
					const index = Array.from(sections).indexOf(entry.target);
					dots.forEach((d, i) => {
						d.classList.toggle('active', i === index);
					});
				}
			});
		}, observerOptions);

		sections.forEach(section => observer.observe(section));
	};

	document.addEventListener('DOMContentLoaded', () => {
		initTheme();
		initNavDots();
	});
</script>
