---
interface Props {
	id: string;
	title: string;
	subtitle: string;
	image: string;
	techStack?: string[];
	githubUrl?: string;
	liveUrl?: string;
}

const { id, title, subtitle, image, techStack = [], githubUrl, liveUrl } = Astro.props;
---

<article class="project-card" data-project-id={id}>
	<button class="card-trigger" aria-label={`View details about ${title}`}>
		<div class="card-image">
			<img src={image} alt={title} loading="lazy" />
		</div>
		<div class="card-content">
			<h3 class="card-title">{title}</h3>
			<p class="card-subtitle">{subtitle}</p>
		</div>
	</button>
	
	<!-- Hidden content for modal -->
	<div class="project-details" data-modal-content>
		<div class="modal-header">
			<img src={image} alt={title} class="modal-image" />
		</div>
		<div class="modal-body">
			<div class="modal-title-row">
				<h2>{title}</h2>
				<div class="modal-links">
					{githubUrl && (
						<a href={githubUrl} target="_blank" rel="noopener" class="icon-link" title="View Code">
							<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>
						</a>
					)}
					{liveUrl && (
						<a href={liveUrl} target="_blank" rel="noopener" class="icon-link" title="View Live">
							<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="14" x="2" y="3" rx="2"/><line x1="8" x2="16" y1="21" y2="21"/><line x1="12" x2="12" y1="17" y2="21"/></svg>
						</a>
					)}
				</div>
			</div>
			<p class="modal-subtitle">{subtitle}</p>
			{techStack.length > 0 && (
				<div class="tech-stack">
					{techStack.map(tech => (
						<span class="tech-tag">{tech}</span>
					))}
				</div>
			)}
			<div class="modal-content">
				<slot />
			</div>
		</div>
	</div>
</article>

<style>
	.project-card {
		position: relative;
	}

	.card-trigger {
		display: block;
		width: 100%;
		background: none;
		border: none;
		padding: 0;
		cursor: pointer;
		text-align: left;
		transition: opacity 0.2s;
	}

	.card-trigger:hover {
		opacity: 0.8;
	}

	.card-image {
		width: 100%;
		aspect-ratio: 16 / 9;
		overflow: hidden;
		background: var(--card-bg);
	}

	.card-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	.card-content {
		padding: clamp(0.75rem, 2vw, 1.25rem) 0;
	}

	.card-title {
		font-size: clamp(1rem, 2.5vw, 1.25rem);
		font-weight: 600;
		color: var(--text);
		margin-bottom: 0.25rem;
	}

	.card-subtitle {
		font-size: clamp(0.8rem, 2vw, 1rem);
		color: var(--text-muted);
		margin: 0;
	}

	/* Hidden modal content */
	.project-details {
		display: none;
	}

	/* Tech stack for modal */
	.tech-stack {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
		margin: 1rem 0;
	}

	.tech-tag {
		font-size: 0.75rem;
		color: #fff;
		background: #4a5568;
		padding: 0.25rem 0.75rem;
		border-radius: 2px;
	}
</style>
