---
interface Props {
	email?: string;
}

const { email } = Astro.props;
---

<div class="contact">
	<slot />
	{email && (
		<p>
			Drop me an email at <a href={`mailto:${email}`}>{email}</a>
		</p>
	)}
</div>

<style>
	.contact :global(p) {
		font-size: clamp(0.95rem, 2.5vw, 1.25rem);
		color: #444;
		margin-bottom: clamp(0.5rem, 1.5vw, 1rem);
		line-height: 1.7;
	}

	.contact :global(a),
	.contact a {
		color: #111;
		text-decoration: none;
		border-bottom: 1px solid #111;
		transition: opacity 0.2s;
	}

	.contact :global(a:hover),
	.contact a:hover {
		opacity: 0.6;
	}
</style>
